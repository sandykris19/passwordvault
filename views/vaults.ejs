<%- include('partials/header2'); -%>


<form class="password-input" action="/vaults/add" method="POST">
  <input type="text" name="email" class="email" placeholder="Email" required>
  <input type="password" name="password" class="password" placeholder="Password" required>
  <input type="submit" value="submit" class="button">
</form>
<p style="margin-left: 120px; margin-top: 10px;">Please click on shield button to view passwords.</p>
<ul class="cards">
  <li class="card">
    <img src="/vault.png" alt="vault card icon">
    <i class='bx bx-shield-x icon bx-md'></i>
    <h4>example@mail.com</h4>
    <p class="hash">35yghywtve6w7gubdywgte7</p>
    <p class="unhidepassword">examplepassword</p>
  </li>
  <% pcard.password.forEach((pass) => { %>
  <li class="card">
    <img src="/vault.png" alt="vault card icon">
    <i class='bx bx-shield-x icon bx-md'></i>
    <h4> <%= pass.email %> </h4>
    <p class="hash">35yghywtve6w7gubdywgte7</p>
    <p class="unhidepassword"><%= pass.password %> </p>
    <form action="/delete/<%= pass._id %>" method="post" style="all: initial;">
      <input type="submit" value="Delete" class="del-button">
    </form>
  </li>
  <% }) %>



</ul>

<script src="/click.js"></script>

<%- include('partials/footer'); -%>